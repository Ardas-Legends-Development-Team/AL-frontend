    "unplugin-vue-components": "^0.24.1",
    "vite": "^4.2.2",
    "vite-plugin-webfont-dl": "^3.7.3",
    "vitest": "^0.30.1",
    "vue-tsc": "^1.2.0"
  },
  "simple-git-hooks": {
    "pre-commit": "pnpm lint-staged"
  },
  "lint-staged": {
    "*": "eslint --fix"
